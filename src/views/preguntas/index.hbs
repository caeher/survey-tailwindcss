<div class="container sm:container md:container lg:container mx-auto p-6">
  <div class="bg-white p-6 shadow rounded">
    <div class="relative clear-both">
      <div class="float-right">
        <a
          href="/preguntas/crear"
          class="py-2 px-3 rounded text-white shadow bg-blue-500"
        >Crear pregunta</a>
      </div>
    </div>
    <div class="mt-5 py-5">
      <div class="flex">
        <input
          class="flex-1 px-2 py-3 shadow border rounded-l"
          type="text"
          name="search"
        />
        <button class="py-2 px-3 text-white shadow bg-blue-500" type="submit">
          Buscar
        </button>
      </div>
    </div>
    <div class="">
      {{#if datos}}
        <div class="inline-block min-w-full py-2 align-middle">
          <div
            class="overflow-hidden shadow-sm ring-1 ring-black ring-opacity-5" >
            <table class="min-w-full divide-y divide-gray-300">
              <thead class="bg-gray-50">
                <tr>
                  <th
                    scope="col"
                    class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6 lg:pl-8"
                  >Pregunta</th>
                  <th
                    scope="col"
                    class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"
                  ></th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200 bg-white">
                {{#each datos }}
                  <tr>
                    <td
                      class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6 lg:pl-8"
                    >
                     {{ this.title }} 
                    </td>

                    <td
                      class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6 lg:pr-8"
                    >
                      <a
                        href="/preguntas/edit/{{ this._id }}"
                        class="text-indigo-600 hover:text-indigo-900"
                      >Edit</a>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      {{/if}}
    </div>
  </div>
</div>